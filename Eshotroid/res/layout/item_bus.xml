<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:padding="@dimen/item_bus_padding" >

    <TextView
        android:id="@+id/textView_item_bus_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_bus_margin"
        android:textSize="@dimen/item_bus_number_textSize" />

    <TextView
        android:id="@+id/textView_item_bus_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_bus_margin"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/checkBox_item_bus_isFavorited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_bus_margin"
        android:button="@drawable/star"
        android:checked="false" />

</LinearLayout>